{{!
    @template theme_dsgovbr/login

    Login page layout template for the Gov.BR DS theme.

    Context variables required for this template:
    * sitename - The name of the site
    * output - An instance of core_renderer
    * bodyattributes - attributes for the body tag
}}
<!DOCTYPE html>
<html {{{corehtmlattributes}}}>
<head>
    <title>{{#output}}{{page_title}}{{/output}}</title>
    <html-head-code>
    {{#output}}{{standard_head_html}}{{/output}}
    </html-head-code>
</head>
<body {{{bodyattributes}}}>
{{#output}}{{standard_top_of_body_html}}{{/output}}

{{! Gov.BR signature bar }}
<div class="govbr-header-top" role="banner">
    <img src="{{#output}}{{image_url 'logo-govbr', 'theme_dsgovbr'}}{{/output}}"
         alt="Governo Federal do Brasil"
         class="govbr-logo"
         width="84"
         height="24">
    <span class="govbr-header-title">Governo Federal</span>
</div>

<div id="page-wrapper" class="d-print-block">

    {{#output}}{{skip_link}}{{/output}}

    <div id="page" class="container-login100">
        <div id="page-content">
            <div id="region-main-box">
                <section id="region-main" aria-label="{{#str}}content{{/str}}">
                    {{{output.main_content}}}
                </section>
            </div>
        </div>
        {{> theme_boost/footer}}
    </div>

</div>

{{#output}}{{standard_end_of_body_html}}{{/output}}

</body>
</html>
{{! end login }}
