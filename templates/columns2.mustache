{{!
    @template theme_dsgovbr/columns2

    Two column layout template for the Gov.BR DS theme.

    Context variables required for this template:
    * sitename - The name of the site
    * output - An instance of core_renderer
    * bodyattributes - attributes for the body tag
    * sidepreblocks - HTML for side-pre block region
    * hasblocks - true if blocks exist in side-pre
    * regionmainsettingsmenu - HTML for region main settings menu
    * hasregionmainsettingsmenu - boolean
    * header - HTML for the page header
}}
<!DOCTYPE html>
<html {{{corehtmlattributes}}}>
<head>
    <title>{{#output}}{{page_title}}{{/output}}</title>
    <html-head-code>
    {{#output}}{{standard_head_html}}{{/output}}
    </html-head-code>
</head>
<body {{{bodyattributes}}}>
{{#output}}{{standard_top_of_body_html}}{{/output}}

{{! Gov.BR signature bar }}
<div class="govbr-header-top" role="banner" aria-label="{{#str}}govbrsignaturebar, theme_dsgovbr{{/str}}">
    <img src="{{#output}}{{image_url 'logo-govbr', 'theme_dsgovbr'}}{{/output}}"
         alt="{{#str}}govbrlogoalt, theme_dsgovbr{{/str}}"
         class="govbr-logo"
         width="84"
         height="24">
    <span class="govbr-header-title">Governo Federal</span>
</div>

<div id="page-wrapper" class="d-print-block">

    {{#output}}{{skip_link}}{{/output}}

    {{{header}}}

    {{#output}}{{course_header}}{{/output}}

    <div id="page" class="drawers {{#courseindexopen}}show-drawer-left{{/courseindexopen}} {{#blockdraweropen}}show-drawer-right{{/blockdraweropen}} drag-container">
        {{> theme_boost/drawer-navigation}}
        {{> theme_boost/drawer-blocks}}

        <div id="topofscroll" class="main-inner">
            <div id="page-content" class="pb-3 d-print-block">
                <div id="region-main-box">
                    {{#hasregionmainsettingsmenu}}
                    <div id="region-main-settings-menu" class="d-print-none">
                        <div> {{{regionmainsettingsmenu}}} </div>
                    </div>
                    {{/hasregionmainsettingsmenu}}
                    <section id="region-main" aria-label="{{#str}}content{{/str}}">

                        {{#hasregionmainsettingsmenu}}
                        <div class="region_main_settings_menu_proxy"></div>
                        {{/hasregionmainsettingsmenu}}
                        {{{output.course_content_header}}}
                        {{{output.main_content}}}
                        {{{overflow}}}
                        {{{output.activity_navigation}}}
                        {{{output.course_content_footer}}}
                    </section>
                    {{#hasblocks}}
                    <section id="region-pre" class="block-region" aria-label="{{#str}}blocks{{/str}}">
                        {{{sidepreblocks}}}
                    </section>
                    {{/hasblocks}}
                </div>
            </div>
        </div>

        {{> theme_boost/footer}}
    </div>
</div>

{{#output}}{{standard_end_of_body_html}}{{/output}}

</body>
</html>
{{! end columns2 }}
